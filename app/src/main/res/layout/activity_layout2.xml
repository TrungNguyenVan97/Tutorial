<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bai7.Layout2Activity">

    <RelativeLayout
        android:id="@+id/relayout1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FF0033">

        <RelativeLayout
            android:id="@+id/relayout2"
            android:layout_width="180dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/relayout2"
            android:background="#E040FB" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relayout1">

        <RelativeLayout
            android:id="@+id/relayout3"
            android:layout_width="150dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relayout4"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#ff0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relayout4"
                android:background="#807C4DFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/relayout3">

            <RelativeLayout
                android:id="@+id/relayout5"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relayout5">

                <RelativeLayout
                    android:id="@+id/relayout6"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="#FF4040" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/relayout6"
                    android:background="#B2FF59" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>